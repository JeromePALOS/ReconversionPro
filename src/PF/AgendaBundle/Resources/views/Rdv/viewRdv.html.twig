{% extends "PFAgendaBundle::layout.html.twig" %}


{% block title %}
	{{ parent() }} | TimeSlot
{% endblock %}





{% block stylesheets %}

{{parent()}}
<link href="{{ asset('assets/plugin/fullcalendar/fullcalendar.css') }}" rel='stylesheet' />
<link href="{{ asset('assets/plugin/fullcalendar/fullcalendar.print.css') }}" rel='stylesheet' media='print' />




{% endblock %}
{% block body %}
{{parent()}}
		<table class="table table-hover" id="table-timeslot">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Date</th>
					<th scope="col">Conseill√©</th>
					<th scope="col">Statut</th>
				</tr>
			</thead>
			<tbody>
				{% for rdv in listRdv%}
					<tr>
						<th scope="row">{{ loop.index }}</th>
						<td>
							{{ rdv.timeslot.date|date('d/m/Y H:i') }}
						</td>
						<td>{{ rdv.timeslot.conseille }}</td>
						<td>
							{{ rdv.status }}
						</td>
					
					</tr>
				{% endfor %}			

			</tbody>
		</table>
		
		
  <div id='calendar'></div>



<script src="{{ asset('assets/plugin/fullcalendar/moment.min.js') }}"></script>
<script src="{{ asset('assets/js/jquery.3.3.1.js') }}"></script>
<script src="{{ asset('assets/plugin/fullcalendar/fullcalendar.js') }}"></script>
<script>

  $(document).ready(function() {

    $('#calendar').fullCalendar({
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay,listWeek'
      },

      navLinks: true, // can click day/week names to navigate views
      events: [
					{% for timeslot in listTimeSlot %}
						{
							
								{% if timeslot.rdv|length > 0 %}
									{% for rdv in timeslot.rdv %}
										{% if rdv.status != 'Validate' %}
								//ses propre timeslot
									
											start: '{{ timeslot.date|date('Y-m-d\\TH:i:s') }}',
											end: '{{ timeslot.date|date('Y-m-d\\TH:i:s') }}',
											backgroundColor: '#00B2ED',
											borderColor : '#00B2ED',
											textColor: 'white',
											title: '[{{timeslot.conseille}}] Click to reserve',
											url: '{{ path('pf_agenda_add_rdv_sans_type', { 'idtimeslot': timeslot.id }) }}',
										{% endif %}
									{% endfor %}
								{% else %}
										start: '{{ timeslot.date|date('Y-m-d\\TH:i:s') }}',
										end: '{{ timeslot.date|date('Y-m-d\\TH:i:s') }}',
										backgroundColor: '#00B2ED',
										borderColor : '#00B2ED',
										textColor: 'white',
										title: 'click to reserve',
										url: '{{ path('pf_agenda_add_rdv_sans_type', { 'idtimeslot': timeslot.id }) }}',
								{% endif %}		
							
						},
					{% endfor %}
				]
    });

  });

</script>


{% endblock %}

